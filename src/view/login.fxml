<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="loginPanel" alignment="TOP_CENTER" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.LoginController">
    <children>
        <Label text="Panel logowania">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
            <VBox.margin>
                <Insets bottom="20.0" top="20.0" />
            </VBox.margin>
        </Label>
        <TextField fx:id="userNameTextField" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Login...">
            <VBox.margin>
                <Insets bottom="20.0" top="10.0" />
            </VBox.margin>
        </TextField>
        <PasswordField fx:id="passwordTextField" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" promptText="Hasło...">
            <VBox.margin>
                <Insets bottom="20.0" />
            </VBox.margin>
        </PasswordField>
        <Button mnemonicParsing="false" onAction="#loginToServer" text="Zaloguj" />
      <Button mnemonicParsing="false" onAction="#registerNewUser" text="Nie posiadasz konta? Zarejestruj się!">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
      <Label fx:id="loginInfoLabel" text="Niepoprawny login lub hasło!" textFill="RED">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
    </children>
</VBox>
